<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/main_margin</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:textSize">22sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/main_background_button_color</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:paddingStart">@dimen/main_margin</item>
        <item name="android:textColor">@color/text_color_settings</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingVertical">@dimen/settings_dp</item>
    </style>

    <style name="SearchStyle">
        <item name="android:drawableTint">@color/icon_color_settings</item>
        <item name="android:textColorHint">@color/background_tint_text</item>
        <item name="android:background">@color/background_tint_search</item>
    </style>

    <style name="TrackItemStyle">
        <item name="android:textColor">@color/text_color_settings</item>
    </style>

    <style name="TrackItemStyle2">
        <item name="android:textColor">@color/track_item_text</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ActivitySearchButton">
        <item name="android:textColor">@color/text_color_settings_night</item>
        <item name="android:backgroundTint">@color/settings_background_color_night</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/text_color_main</item>
    </style>

    <style name="PlayerTrackInfoTextStyle">
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlayerTrackInfoDescriptionTextStyle">
        <item name="android:textColor">@color/icon_color_settings</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>